<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <whatsappshare translate="label" module="whatsappshare">
            <label>WhatsAppShare Options</label>
            <sort_order>100</sort_order>
        </whatsappshare>
    </tabs>
    <sections>
        <whatsappshare translate="label" module="whatsappshare">
            <label>Extension Options</label>
            <tab>whatsappshare</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="whatsappshare">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                         <button_text translate="label">
                            <label>Share Button Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </button_text>
                        <button_comment translate="label">
                            <label>Comment with share button</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </button_comment>


                    </fields>
                </general>
            </groups>
        </whatsappshare>
    </sections>
</config>